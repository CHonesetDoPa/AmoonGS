{
  "name": "amoongs-gui",
  "version": "1.0.0",
  "description": "A GUI application built with Electron.",
  "license": "MIT",
  "author": "CH",
  "type": "commonjs",
  "main": "src/assets/js/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:portable": "electron-builder --win portable",
    "build:dir": "electron-builder --win --dir",
    "test": "npm run lint",
    "lint": "eslint .",
    "clean": "rm -rf dist node_modules",
    "clean:dist": "rm -rf dist"
  },
  "dependencies": {
    "@material/web": "^2.4.0",
    "fs-extra": "^11.3.2",
    "got": "^14.4.9",
    "jsonfile": "^6.2.0"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "jest": "^30.2.0"
  },
  "build": {
    "appId": "com.amoongs.gui",
    "productName": "AmoongsGUI",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.vscode/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "signAndEditExecutable": false,
      "icon": "src/assets/images/icon-256.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "src/assets/images/icon-256.ico",
      "uninstallerIcon": "src/assets/images/icon-256.ico",
      "installerHeaderIcon": "src/assets/images/icon-256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AmoongsGUI",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE",
      "language": "2052"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
